<header class="py-5">
  <div class="relative bg-white">
    <div class="mx-auto flex max-w-7xl items-center justify-between p-6 md:justify-start md:space-x-10 lg:px-8">
      <div class="flex justify-start lg:w-0 lg:flex-1 pr-10">
        <a class="flex items-center" href="/">
          <img src="{{ asset "images/logo.png"}}" width="30" height="30" alt="logo" >
          <span class="text-2xl font-medium ml-2">kolosek</span>
        </a>
      </div>

      {{#if blog}}
        <div class="items-center justify-end md:flex flex-wrap md:flex-1 lg:w-0">
          <nav class="space-x-8 md:flex">
            <a href="/">
              <button class="group inline-flex items-center justify-center rounded-full py-2 px-10 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-slate-900 text-white hover:bg-slate-700 hover:text-slate-100 active:bg-slate-800 active:text-slate-300 focus-visible:outline-slate-900">Get in touch</button>
            </a>
          </nav>
        </div>
      {{/if}}

      {{#if post_page}}
        <div class="items-center justify-end md:flex flex-wrap md:flex-1 lg:w-0">
          <nav class="space-x-8 md:flex">
            <a href="/">
              <button class="group inline-flex items-center justify-center rounded-full py-2 px-10 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-slate-900 text-white hover:bg-slate-700 hover:text-slate-100 active:bg-slate-800 active:text-slate-300 focus-visible:outline-slate-900">Get in touch</button>
            </a>
          </nav>
        </div>
      {{/if}}

      {{#if other}}
        <div class="items-center justify-end md:flex flex-wrap md:flex-1 lg:w-0">
          <nav class="space-x-8 md:flex">
            <a href="/about" class="inline-block rounded-lg py-1 px-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">About Us</a>
            <a href="/portfolio" class="inline-block rounded-lg py-1 px-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">Featured projects</a>
            <a href="https://poslovi.kolosek.com/" class="inline-block rounded-lg py-1 px-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900" target="_blank">Careers</a>
            <a href="/blog" class="inline-block rounded-lg py-1 px-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">Blog</a>
            <a href="/contact" class="inline-block rounded-lg py-1 px-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">Contacts</a>
          </nav>
        </div>
      {{/if}}

    </div>
  </div>
</header>